<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="description" content="Honest Overhead Garage Doors of Louisville is a full-service garage door repair service, specializing in residential and small commercial repairs and upgrades">
        <meta name="robots" content="@ViewData["Robots"]" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <environment names="Development">
            <link rel="stylesheet" href="~/css/site.css" />
        </environment>
        <environment names="Staging,Production">
            <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        </environment>
        <title>@ViewData["Title"] - Honest Overhead</title>
    </head>
    <body>
        <header id="header" class="clearfix">
            <div class="content clearfix">
            <div class="frame-left summary">
                <h1>Honest Overhead Garage Doors</h1>
                <h2>Repairs, sales, and installation</h2>
                <p>Louisville, Elizabethtown, and surrounding areas</p>
            </div>
            <nav class="frame-right">
                <ul>
                    <li><a href="/main">Main</a></li>
                    <li><a href="/services">Services</a></li>
                    <li><a href="/about">About</a></li>
                    <!-- <li><a href="/contact">Contact</a></li> -->
                </ul>
            </nav>
            </div>
        </header>
        <main class="content clearfix" id="body">
            @RenderBody()
        </main>
        <footer id="footer" class="clearfix">
            <div class="content clearfix">
            <div class="frame-left">
                <p>Senior and military discounts</p>
                <p>Free estimates for new doors</p>
                <p>No weekend or late-night fees</p>
                <p>Same day service</p>
            </div>
            <div class="frame-right">
                <p><b>Honest Overhead</b></p>
                <p>Garage Doors of Louisville</p>
                <p><a href="mailto:HonestOverhead@outlook.com">HonestOverhead@outlook.com</a></p>
                <p><a href="tel:+15022692351">1-502-269-2351</a></p>
            </div>
            </div>
        </footer>
        <environment names="Development">
            <script src="~/js/site.js" asp-append-version="true"></script>
        </environment>
        <environment names="Staging,Production">
            <script src="~/js/site.min.js" asp-append-version="true"></script>
        </environment>
        @RenderSection("Scripts", required: false)
    </body>
</html>
